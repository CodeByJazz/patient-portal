<form class="information" action="/create_account" method="post">
  <div>
    <label for="name">Username:</label>
      <input id="name" type="text" name="username" value=<%= @username %>>
  </div>
  <div>
    <label for="password">Password:</label>
      <input id="password" type="password" name="password" placeholder="Must be at least 8 characters">
  </div>
    <div>
    <label for="confirm_password">Confirm Password:</label>
      <input id="confirm_password" type="password" name="confirm_password">
  </div>
  <div>
    <label for="first_name">First Name:</label>
      <input id="first_name" type="text" name="first_name" value=<%= @first_name %>>
  </div>  
  <div>
    <label for="last_name">Last Name:</label>
      <input id="last_name" type="text" name="last_name" value=<%= @last_name %>>
  </div> 
  <div>
    <label for="phone_number">Phone Number:</label>
    <input id="phone_number" type="tel" name="phone_number" placeholder="123-456-7890" pattern="[0-9]{3}-[0-9]{3}-[0-9]{4}" required><br><br>
  </div>   
  <button type="submit">Create Account</button>
</form>
